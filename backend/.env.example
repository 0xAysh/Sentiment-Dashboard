# Copy this file to .env and fill in values as needed.
# The app reads these in app/config.py via os.getenv(...)

# Optional: enables ChatGPT rationales in /sentiment?include_rationales=true
OPENAI_API_KEY=

# News collection window (days)
LOOKBACK_DAYS=5

# Max items to analyze per request (after dedupe)
MAX_ITEMS=40

# Recency half-life in hours (higher = slower decay of old news)
HALF_LIFE_HOURS=24

# Default credibility for unknown domains in [0,1]
DEFAULT_SOURCE_WEIGHT=0.75

# Comma-separated list of allowed origins for CORS (use explicit origins in prod)
CORS_ALLOW_ORIGINS=*
